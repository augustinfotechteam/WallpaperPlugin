<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
            id="com.purplemad.WallpaperPlugin"
      version="0.1.0">
    <engines>
        <engine name="cordova" version=">=3.0.0"/>
    </engines>
    <name>WallpaperPlugin</name>
    <description>Plugin for setting image as an wallpaper/saving an image on internal storage.</description>
    <license>Apache 2.0 License</license>
    <keywords>wallpaper,image,download,picture</keywords>
    
    <asset src="www/wallpaper.js" target="wallpaper.js"/>
    
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Wallpaper">
                <param name="android-package" value="com.purplemad.WallpaperPlugin.Wallpaper"/>
            </feature>
        </config-file>
        <source-file src="src/android/Wallpaper.java" target-dir="com/purplemad/WallpaperPlugin/Wallpaper" />
    </platform>
</plugin>